.product-card
  border 1px solid $alto-color
  border-radius 4px
  margin-bottom 12px
  text-align left
  overflow hidden

  &__link
    color $tundora-color
    display block
    text-decoration none
    padding-left 8px
    padding-right 8px
    margin-bottom 10px
    padding-top 10px

  &__img
    display block
    width 100%

  &__name
    font-size 1.2rem
    margin 4px 0 10px 0

  &__desc
    font-size 1rem
    margin 14px 0 6px 0

  &__price
    color $shamrock-color
    display block
    font-size 1.6rem
    font-weight $bold-weight

  &__add
    width 100%
    border-radius 0
